<h1> Szukaj przychodni</h1>

<%= form_tag("/clinic_search/query", method: "get") do %>
    <p>
        <%= label_tag(:clinic_name, 'Nazwa przychodni') %><br>
        <%= text_field_tag(:clinic_name, '', class: 'form-control') %>
    </p>

    <p>
        <%= label_tag(:clinic_name, 'Miasto') %><br>
        <%= text_field_tag(:clinic_city, '', class: 'form-control') %>
    </p>

    <p>
        <%= label_tag(:clinic_name, 'Adres') %><br>
        <%= text_field_tag(:clinic_address, '', class: 'form-control') %>
    </p>

    <p>
        <%= label_tag(:clinic_name, 'Numer telefonu') %><br>
        <%= text_field_tag(:clinic_phone, '', class: 'form-control') %>
    </p>

    <p>
        <%= submit_tag('Znajdź przychodnię', class: 'btn btn-primary') %>
    </p>
<% end %>
