<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to '< Strona główna', root_path, class: 'navbar-brand' %>
      <%= link_to '< Wyszukiwanie', clinic_search_path, class: 'navbar-brand' %>
    </div>
  </div>
</nav>

<h1>Lista przychodni</h1>

<table class="table table-striped">
  <tr>
    <th>Przychodnia</th>
    <th>Numer telefonu przychodni</th>
    <th colspan="3">
  </tr>

  <% @clinics.each do |clinic| %>
    <tr>
      <td><%= clinic.full_name %></td>
      <td><%= clinic.phone %></td>
      <td><%= link_to 'Pokaż', clinic_path(clinic) %></td>
      <td><%= link_to 'Edytuj', edit_clinic_path(clinic) %></td>
      <td><%= link_to 'Usuń', clinic_path(clinic),
              method: :delete,
              data: { confirm: 'Czy na pewno?' } %>
    </td>
    </tr>
  <% end %>
</table>


