<h1> Szukaj specjalizacji</h1>

<%= form_tag("/spec_search/query", method: "get") do %>
    <p>
        <%= label_tag(:spec_name, 'Nazwa specjalizacji') %><br>
        <%= text_field_tag(:spec_name, '', class: 'form-control') %>
    </p>

    <p>
        <%= label_tag(:spec_description, 'Opis specjalizacji') %><br>
        <%= text_field_tag(:spec_description, '', class: 'form-control') %>
    </p>

    <p>
        <%= submit_tag('Znajdź specjalizację', class: 'btn btn-primary') %>
    </p>
<% end %>
