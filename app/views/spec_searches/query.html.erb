<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to '< Strona główna', root_path, class: 'navbar-brand' %>
      <%= link_to '< Wyszukiwanie', spec_search_path, class: 'navbar-brand' %>
    </div>
  </div>
</nav>

<h1>Lista specjalizacji</h1>

<table class="table table-striped">
  <tr>
    <th>Nazwa specjalizacji</th>
    <th>Opis specjalizacji</th>
    <th colspan="3">
  </tr>

  <% @specs.each do |spec| %>
    <tr>
      <td><%= spec.name %></td>
      <td><%= spec.description %></td>
      <td><%= link_to 'Pokaż', spec_path(spec) %></td>
      <td><%= link_to 'Edytuj', edit_spec_path(spec) %></td>
      <td><%= link_to 'Usuń', spec_path(spec),
              method: :delete,
              data: { confirm: 'Czy na pewno?' } %>
    </td>
    </tr>
  <% end %>
</table>


