<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to '< Strona główna', root_path, class: 'navbar-brand' %>
      <%= link_to '< Lista kontaktów', contacts_path, class: 'navbar-brand' %>
      <%= link_to 'Szukaj kontaktów', {controller: 'searches'}, class: 'navbar-brand' %>
    </div>
  </div>
</nav>

<h1>Lista kontaktów</h1>

<% unless @contacts.blank? %>
<table class="table table-striped">
  <tr>
    <th>Osoba</th>
    <th>Numer telefonu</th>
    <th>Przychodnia</th>
    <th>Specjalizacja</th>
    <th colspan="3"></th>
  </tr>

  <% @contacts.each do |contact| %>
    <tr>
      <td><%= contact.name %> <%= contact.surname %></td>
      <td><%= contact.phone %></td>
      <td><%= contact.clinic.full_name %></td>
      <td><%= contact.spec.name %></td>
      <td><%= link_to 'Pokaż', contact_path(contact) %></td>
      <td><%= link_to 'Edytuj', edit_contact_path(contact) %></td>
      <td><%= link_to 'Usuń', contact_path(contact),
              method: :delete,
              data: { confirm: 'Czy na pewno?' } %>
    </td>
    </tr>
  <% end %>
</table>
<% else %>
<h2>Nie znaleziono żadnych kontaktów</h2>
<% end %>

